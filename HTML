"SIMD Rank": simd,
"Carbon Stock Concentration": concentration,
"Far-deprived Datazone": far
});

var overlayMaps1 = ( {
"Edinburgh":simd1,
"Carbon Stock Concentration(midupper)":concentmidupper,
"Aforrestation":Aforrestation,
"1km Buffer (Concentration_midupper)": buffer1,
"1km buffer (far-deprived)":buffer2
});

map.on('baselayerchange', function (eventLayer) {
if (eventLayer.name === 'Carbon Stock Concentration') {
legend1.addTo(map);
map.removeControl(legend);
map.removeControl(legend2);
}
});

map.on('baselayerchange', function (eventLayer) {
if (eventLayer.name === 'SIMD Rank') {
map.removeControl(legend1);
map.removeControl(legend2);
legend.addTo(map);
}
});

map.on('baselayerchange', function (eventLayer) {
if (eventLayer.name === 'Far-deprived Datazone') {
legend2.addTo(map);
map.removeControl(legend1);
map.removeControl(legend);
}
});

map.on('baselayerchange', function (eventLayer) {
if (eventLayer.name === 'Carbon Stock Concentration(midupper)') {
legend3.addTo(map);
map.removeControl(legend1);
map.removeControl(legend);
map.removeControl(legend2);

}
});

map.fitBounds(geojson.getBounds());

L.control.layers(baseMaps).addTo(map);
L.control.layers(overlayMaps,overlayMaps1).addTo(map);

});
</script>
