#!/usr/bin/env python3
import cx_Oracle
import cgi
import cgitb
cgitb.enable()

with open("../oracle",'r') as pwf:
    pw = pwf.read().strip()

print("Content-Type: text/html\n")
print("<!DOCTYPE html>")
print("<head>")
print("<title> Findings </title>")
print("<style>")
print("table,th,td{border:1px solid black; margin-right: auto; margin-left: auto;}")
print("body {background-color: lavender; opacity: 0.93;}")
print("p {text-align: center;}")
print("button {justify-content: center;}")
print("</style>")
print("</head>")
print("<body>")


form=cgi.FieldStorage()
searchterm=form.getvalue('postcode')
query="select * from postcode where postcode='%s'" %(searchterm)

conn = cx_Oracle.connect(dsn="geoslearn",user="s2259785",password=pw)
c = conn.cursor()
c.execute(query)

for row in c:
    if len(row[5])==1:
        if int(row[5])==0:
           print("<p>","This area",row[3],"a far-deprived area.","</p>")
           print("<table>")
           print("<tr>")
           print("<td>","Postcode","</td>""<td>",row[0]," </td>")
           print("</tr>")
           print("<tr>")
           print("<td>","Datazone Name","</td>""<td>",row[4]," </td>")
           print("</tr>")
           print("<tr>")
           print("<td>","Datazone ID","</td>""<td>",row[1]," </td>")
           print("</tr>")
           print("<tr>")
           print("<td>","SIMD Rank:","</td>""<td>",row[2]," </td>")
           print("</tr>")
           print("</table>")
        elif int(row[5])==1:
           print("<p>","This area",row[3],"a far-deprived area."," </p>")
           print("<table>")
           print("<tr>")
           print("<td>","Postcode","</td>""<td>",row[0]," </td>")
           print("</tr>")
           print("<tr>")
           print("<td>","Datazone Name","</td>""<td>",row[4]," </td>")
           print("</tr>")
           print("<tr>")
           print("<td>","Datazone ID","</td>""<td>",row[1]," </td>")
           print("</tr>")
           print("</table>")
           print("<p>","There is no Greenspace near this area."," </p>")
           
    else:
        print("<p>","This area",row[3],"a far-deprived area."," </p>")
        print("<table>")
        print("<tr>")
        print("<td>","Postcode""</td>""<td>",row[0],"</td>")
        print("</tr>")
        print("<tr>")
        print("<td>","Datazone Name","</td>""<td>",row[4]," </td>")
        print("</tr>")
        print("<tr>")
        print("<td>","Datazone ID","</td>""<td>",row[1]," </td>")
        print("</tr>")
        print("<tr>")
        print("<td>","SIMD Rank","</td>""<td>",row[2]," </td>")
        print("</tr>")
        print("<tr>")
        print("<td>","Greenspace Name","</td>""<td>",row[5]," </td>")
        print("</tr>")
        print("<tr>")
        print("<td>","Carbon stock concentration","</td>""<td>",row[6],"kg/m2","</td>")
        print("</tr>")
        print("</table>")
conn.close()

print(" <form method="'"GET"' "action="'"https://www.geos.ed.ac.uk/~s2259785/findings.html"'">")
print("<button type=" '"submit"' ">")
print('Back')
print("</button>")
print("</form>")
print("</body>")
print("</html>")
